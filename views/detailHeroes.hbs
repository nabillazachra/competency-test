{{> header}}
{{#if message}}
    <div class="alert alert-{{message.type}}" role="alert">
        {{message.message}}
    </div>
{{/if}}
{{> navbar}}
<div class="container pt-5 pb-3">
    <h1 class="h3 mb-3 fw-bold text-light">{{title}}</h1>
    <div class="bg-light card px-3">
    <input type="hidden" name="id" id="id" value="{{heroes.id}}">
    <input type="hidden" name="oldPhoto" id="oldPhoto" value="{{heroes.photo}}">
        <div class="mb-3 mt-3">
            <label for="name" class="form-label">Hero Name</label>
            <input type="text" class="form-control" name="name" id="name" placeholder="Input Hero name" value="{{heroes.name}}" readonly>
        </div>
        <div id="preview" class="mb-3"></div>
        <div class="mb-3">
            <label for="type" class="form-label">Type</label>
            <input type="text" class="form-control" name="type" id="type" value="{{heroes.type}}" readonly>
        </div>
        <a href="/heroes"><button class="btn btn-danger mb-3">Back</button></a>
        <input type="hidden" id="url-thumbnail" value="{{heroes.photo}}">
    </div>
</div>

<script>
    const element = document.getElementById('preview');
    const urlThumbnail = document.getElementById('url-thumbnail').value;
    element.innerHTML = `<img src="${urlThumbnail}" style="width: 250px;" class="mt-3"/>`;
    function handleChange(){
        const value = URL.createObjectURL(event.target.files[0]);
        console.log(value);
        element.innerHTML = `<img src="${value}" style="width:250px;" class="mt-3">`;
    }
</script>
{{> footer}}